<div class="contact">
  <div class="contact_intro">
    <h1>Contact</h1>
    <p>We are here for you. Find below the available contact options</p>
  </div>

  <div class="container" id="contact">
    <div class="container anchor" id="process">
    </div>
    <div class="col-xs-12 col-md-6">
      <div class="email">
        <h3><span class="glyphicon glyphicon-envelope"></span>info@propertiesgreece.com</h3>
      </div> <!-- /email-->
      <div class="address">
        <h3><span class="glyphicon glyphicon-map-marker"></span>Anagnostou 22, Athens</h3>
      </div> <!-- /address-->
      <div class="phone">
        <h3><span class="glyphicon glyphicon-phone"></span>0030 210 5345 232</h3>
      </div> <!-- /phone -->
    </div>
    <div class="col-xs-12 col-md-6 myform">
      <form>
        <div class="form-group">
          <label class="sr-only" for="name">Name</label>
          <input class="form-control" placeholder="Enter your name" type="text" id="name">
        </div>
        <div class="form-group">
          <label class="sr-only" for="email">Email</label>
          <input class="form-control" title="mandatory field" placeholder="Enter your email address here" type="email" id="email" required="required">
        </div>
        <div class="form-group">
          <label class="sr-only" for="message">Message</label>
          <textarea class="form-control message-box" title="mandatory field" placeholder="Your message" style="resize:none" cols="40" rows="5" id="message" required="required"></textarea>
          <p id="visible-comment"></p>
          <p id="char-count"></p>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
